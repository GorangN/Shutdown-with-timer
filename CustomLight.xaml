<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Grundfarben -->
    <Color x:Key="WindowBackgroundColor">#FFF4F6FA</Color>
    <Color x:Key="TextColor">#1C1C1C</Color>
    <Color x:Key="AccentColor">#00D8FF</Color>
    <Color x:Key="AccentGreen">#2EA043</Color>
    <Color x:Key="InputBackground">#FFF</Color>
    <Color x:Key="BorderGray">#D0D0D0</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="MahApps.Colors.Accent" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowBackgroundColor}" />
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}" />
    <SolidColorBrush x:Key="ButtonBrush" Color="{StaticResource AccentGreen}" />
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="{StaticResource InputBackground}" />
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderGray}" />

    <!-- TextBox Style -->
    <Style TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource InputBackgroundBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="6" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <!-- Button Style -->
    <Style TargetType="Button">
        <Setter Property="Background" Value="{StaticResource ButtonBrush}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Padding" Value="10,5" />
        <Setter Property="Margin" Value="0,10,0,0" />
    </Style>
</ResourceDictionary>